<div class="container">
  <!-- Outer Row -->
  <div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
          <!-- Nested Row within Card Body -->
          <div class="row">
            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
            <div class="col-lg-6">
              <div class="p-5">
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                </div>
                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "user"}) do |f| %>
                  <div class="form-group">
                    <%= f.input :email,
                       required: false,
                       autofocus: true,
                       label: false,
                       input_html: { autocomplete: "email", class: "form-control form-control-user" }, placeholder: "Email Address" %>
                  </div>
                  <div class="form-group">
                    <%= f.input :password,
                        required: false,
                        label: false,
                        input_html: { autocomplete: "current-password", class: "form-control form-control-user"}, placeholder: "Password" %>
                  </div>
                  <div class="form-group">
                    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                  </div>
                  <%= f.button :submit, "Log in", class: "btn btn-primary btn-user btn-block" %>
                <% end %>
                <hr>
                <div class="text-center">
                  <%= render "devise/shared/links" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
