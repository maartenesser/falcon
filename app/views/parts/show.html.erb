<div class="container">
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary"><%= @part.title %></h6>
    </div>
    <div class="card-body">

    <!-- Caroussel -->
      <div id="myCarousel" class="carousel slide py-4 border-bottom" data-ride="carousel">
      <!-- Indicators -->
        <ol class="carousel-indicators">
        <%# @parts.each do |part| %>
          <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <%# end %>
        </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">
           <div class="item active">
            <%# @parts.each do |part| %>
            <%= cl_image_tag @part.photo, :width=>400, :height=>300, :fetch_format=>:auto, :crop=> :fill %>
            <%# end %>
            </div>
          </div>


          <!-- Left and right controls -->
          <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>

      <!-- Details -->
      <div class="row border-bottom py-4">
        <div class="col-sm-3 col-xs-6 title-first-col">
          <div class="font-weight-bold">Part Num: </div>
          <div class="font-weight-bold">Claim Num: </div>
          <div class="font-weight-bold">Car Make: </div>
          <div class="font-weight-bold">Car Model: </div>
          <div class="font-weight-bold">VIN: </div>
        </div>
        <div class="col-sm-3 col-xs-6 details-first-col">
          <div><%= @part.part_model_code %></div>
          <div><%= @claim.number %></div>
          <div><%= @car.make %></div>
          <div><%= @car.model %></div>
          <div><%= @car.vin %></div>
        </div>
        <div class="col-sm-3 col-xs-6 title-second-col">
          <div class="font-weight-bold">Providing from: </div>
          <div class="font-weight-bold">Category: </div>
          <div class="font-weight-bold">Condition: </div>
          <br>
          <div class="font-weight-bold">Price: </div>
        </div>
        <div class="col-sm-3 col-xs-6 detail-second-col">

          <div><%= @user.email%></div>
          <div><%= @part.category%></div>
          <div><%= @part.category%></div>
          <br>
          <div><%= @part.price %> â‚¬</div>
        </div>
        <% if !@order.blank? %>
        <li>
          <% if @part.user_id == current_user.id  %>
          my part
          <% end %>
        </li>

          <li>order.id <%= @order.id %></li>
        <% end %>
      </div>
      <!-- Description text -->
      <div class="border-bottom py-4">
        <div class="font-weight-bold">Description: </div>
        <div><%= @part.description %></div>
      </div>

      <!-- Submition/Add to basket -->
      <div class="row mt-4">
        <div class="col-sm-3 col-xs-6 mx-auto ">
          <%= link_to (raw('<i class="fas fa-shopping-cart"></i><span> Add to basket</span>')), order_part_path(@part), method: :patch, class: "btn btn-success btn-block" %>
        </div>
        <div class="col-sm-3 col-xs-6 mx-auto ">
          <% if current_user.id == @part.user_id %>
            <%= link_to "Edit part", edit_part_path, class: "btn btn-warning btn-block"  %>
            <%= link_to "Delete part", part_path(@part), data: { confirm: "are you sure?" }, method: :delete, class: "btn btn-danger btn-block"%>
          <% end %>
        </div>
        <div class="col-sm-3 col-xs-6 mx-auto ">
          <%= link_to "Back to parts", parts_path, class: "btn btn-primary btn-block"  %>
        </div>
      </div>
    </div>
  </div>
</div>


